<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/admin_product_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile"

        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/admin_product_image_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Product Image"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/admin_product_image"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/admin_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_product_image_change"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Product Name : "
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/admin_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_product_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Product Price(Rs) : "
        android:textStyle="bold"
        android:padding="10dp" />

    <EditText
        android:id="@+id/admin_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_product_price"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Product Description :"
        android:padding="10dp" />

    <EditText
        android:id="@+id/admin_product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_product_description"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:hint="Product Category : "
        android:padding="10dp" />


    <Button
        android:id="@+id/addAdminProductBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_product_category"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#1C82AD"
        android:padding="10dp"
        android:text="Add Product"
        android:textColor="@android:color/white" />

</RelativeLayout>